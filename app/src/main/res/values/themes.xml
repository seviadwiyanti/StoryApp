<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red1</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_retangle</item>
        <item name="android:padding">16dp</item>
        <item name="endIconMode">password_toggle</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="EditText.Description">

        <item name="android:drawableStart"></item>
    </style>

    <style name="EditText.Person">
        <item name="android:drawableStart"></item>
    </style>

    <style name="EditText.Date">
        <item name="android:drawableStart"></item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_button_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.StoryApp" parent="Base.Theme.StoryApp" />
</resources>